---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Welcome to Astro.">
	<main>
		<section class="intro-hero">
			<div class="heading-box">
				<img src="images/secc-logo.svg" alt="" width="200" height="auto">
				<div class="heading-text-box">
					<h1>
						<span>2022 State Employee Charitable Campaign</span>
					</h1>
					<p class="subheading">September 19th - 22nd</p>
				</div>
			</div>

			<div class="info-box">
				<h2>University <br>Relations</h2>
					<div class="participation">
						<p class="stat">
							<span>77.4%</span>
							Participation
						</p>
					</div>
					<div class="donation">
						<p class="stat">
							<span>$3,865</span>
							Total Pledge
						</p>
					</div>
			</div>
		</section>
		<h3>Quotes from the team</h3>
		<ul role="list" class="quote-card-grid">
			<Card image="/images/quotes/secc-quote-teresa-1.jpg" />
			<Card image="/images/quotes/secc-quote-anne-1.jpg" />
			<Card image="/images/quotes/secc-quote-brandon-1.jpg" />
			<Card image="/images/quotes/secc-quote-brett-1.jpg" />
			<Card image="/images/quotes/secc-quote-brett-2.jpg" />
			<Card image="/images/quotes/secc-quote-christi-1.jpg" />
			<Card image="/images/quotes/secc-quote-david-1.jpg" />
			<Card image="/images/quotes/secc-quote-dogs-1.jpg" />
			<Card image="/images/quotes/secc-quote-drew_shashi.jpg" />
			<Card image="/images/quotes/secc-quote-drew-1.jpg" />
			<Card image="/images/quotes/secc-quote-elvira-1.jpg" />
			<Card image="/images/quotes/secc-quote-jeremiah-1.jpg" />
			<Card image="/images/quotes/secc-quote-joan-1.jpg" />
			<Card image="/images/quotes/secc-quote-katia-1.jpg" />
			<Card image="/images/quotes/secc-quote-mal-1.jpg" />
